.header
	width 100%
	height 100vh
	flex(mid)
	position relative
.nav-wrap
	flex(between)
	padding 20px 0
	position relative
.logo
	width 200px
	+below(1200px)
		width 100px
	+below(768px)
		width 35%
.menu
	width 50%
	+below(768px)
		width auto
		display none
.menu-wrap
	flex(between)
	+below(768px)
		position absolute
		top 100%
		left -10px
		flex-wrap wrap 
		background white 
		width calc(100% + 20px)
.nav__toggle
	width 20%
	flex(mid)
	justify-content flex-end
	.icon
		size 25px
	+above(768px)
		display none
.menu__el
	color black
	+below(768px)
		width 100%
		text-align center
		padding 10px 0
		border-bottom 1px solid #f6f6f6
		up()
.nav__phone
	font-size 28px
	color black
	+below(1200px)
		font-size 16px
	+below(768px)
		text-align center
		width 100%
		font-size 18px
		font-weight bold 
.nav
	background white 
	position fixed
	z-index 100
	top 0
	left 0
	width 100%
.header-content
	flex(mid)
	fl()
	fw() 
	.icon
		size 40px
		fill grey
		margin-top 20px
	img
		width 30%
		min-width 150px
		margin-bottom 10px
.header-content-text
	+below(768px)
		font-size 40px
	font-size 6vw
	up() 
.header-content-text-sub
	+below(768px)
		color black
	color grey
	font-size 18px
	font-weight 200 
.section-adv-img
	+below(768px)
		top -50px
	position absolute
	top -150px
	left 0
	width 100%
	img
		+below(768px)
			width 200px
		width 600px
		margin 0 auto
.section-adv
	background #303030 
	position relative
	margin-top 150px
	.section-title
		+below(768px)
			margin-top 60px
		margin-top 150px
.section-title
	+below(768px)
		font-size 20px
	up()
	text-align center
	font-size 34px
.section-title--white
	color white
.section-title-sub
	+below(768px)
		font-size 12px
		width 80%
		margin 0 auto
		margin-bottom 20px
	up()
	text-align center
	color grey
	font-size 14px
	margin-bottom 40px
.section-title-sub--white
	color darken(white,30)

.adv-cont
	+below(768px)
		margin-top 20px
	flex(between)
	fw()
	margin-top 90px
.adv-el
	+below(768px)
		width 100%
		margin-bottom 20px
	flex(mid)
	fl()
	fw()
	width 30%
	margin-bottom 90px
.adv-icon
	.icon
		fill white
		size 90px

.adv-text
	text-align center
	color darken(white,30)