include block_html/_style.jade
include ../module/**/*.jade

.header
	.nav
		.main-cont
			.nav-wrap
				.logo
					img(src="img/logo.png", alt="")
				.menu
					.menu-wrap
						a(href="#").menu__el Преимущества
						a(href="#").menu__el Заработок
						a(href="#").menu__el Требования
						a(href="#").menu__el Контакты
				a(href="#").nav__phone 8(495)123-12-12
